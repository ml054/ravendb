{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "declaration": false,
    "sourceMap": true,
    "target": "ES6", 
      "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "AMD",
    "typeRoots": [
        "./node_modules/@types",
        "./typings/**/*"
    ],
      "types": [
          "durandal",
          "jquery",
          "knockout",
          "knockout-postbox",
          "knockout.validation",
          "lodash",
          "rbush",
          "requirejs"
      ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
